<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/r_film_txv_title"
        android:layout_width="201dp"
        android:layout_height="58dp"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-thin"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.025"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Candide" />

    <TextView
        android:id="@+id/r_film_txv_author"
        android:layout_width="110dp"
        android:layout_height="52dp"
        android:fontFamily="sans-serif-medium"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/r_film_txv_date"
        app:layout_constraintHorizontal_bias="0.434"
        app:layout_constraintStart_toEndOf="@+id/r_film_txv_title"
        app:layout_constraintTop_toTopOf="@+id/r_film_txv_date"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Voltaire" />

    <TextView
        android:id="@+id/r_film_txv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="11dp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toTopOf="@+id/r_film_txv_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="10/12/1899" />

    <ImageView
        android:id="@+id/r_film_imv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/r_film_txv_title"
        app:srcCompat="@drawable/ic_baseline_movie_24" />

    <Button
        android:id="@+id/r_film_txv_delete"
        android:layout_width="73dp"
        android:layout_height="39dp"
        android:onClick="Delete"
        android:tag="oo"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.952"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/r_film_txv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Info"
        android:text="@string/info"
        app:layout_constraintBottom_toBottomOf="@+id/r_film_txv_delete"
        app:layout_constraintEnd_toStartOf="@+id/r_film_txv_delete" />

</androidx.constraintlayout.widget.ConstraintLayout>